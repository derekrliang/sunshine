<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res/com.example.sunshine.app"
        >

    <com.example.sunshine.app.LocationEditTextPreference
            android:key="@string/pref_key_location"
            android:title="@string/pref_title_location"
            android:defaultValue="92612"
            android:inputType="text"
            android:singleLine="true"
            custom:minLength="3"
    />

    <ListPreference
            android:key="@string/pref_key_temperature_units"
            android:title="@string/pref_title_temperature_units"
            android:defaultValue="@string/pref_units_values_metric"
            android:entries="@array/pref_list_temperature_units_titles"
            android:entryValues="@array/pref_list_temperature_units_values"
    />

    <CheckBoxPreference
            android:title="@string/pref_enable_notifications_label"
            android:key="@string/pref_enable_notifications_key"
            android:summaryOff="@string/pref_enable_notifications_false"
            android:summaryOn="@string/pref_enable_notifications_true"
            android:defaultValue="@string/pref_enable_notifications_default" />

</PreferenceScreen>
